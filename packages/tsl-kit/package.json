{
  "name": "@tsl/kit",
  "version": "0.1.0",
  "description": "WebGPU-first Three.js + TSL toolkit",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime/index.js",
      "types": "./dist/runtime/index.d.ts"
    },
    "./materials": {
      "import": "./dist/materials/index.js",
      "types": "./dist/materials/index.d.ts"
    },
    "./compute": {
      "import": "./dist/compute/index.js",
      "types": "./dist/compute/index.d.ts"
    },
    "./post": {
      "import": "./dist/post/index.js",
      "types": "./dist/post/index.d.ts"
    },
    "./presets": {
      "import": "./dist/presets/index.js",
      "types": "./dist/presets/index.d.ts"
    },
    "./scene": {
      "import": "./dist/scene/index.js",
      "types": "./dist/scene/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --sourcemap",
    "test": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "three": "^0.161.0",
    "zustand": "^4.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/webxr": "^0.5.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "tsup": "^7.2.0",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "three": ">=0.161.0"
  },
  "keywords": [
    "webgpu",
    "three",
    "tsl",
    "rendering"
  ],
  "sideEffects": false,
  "license": "MIT"
}
