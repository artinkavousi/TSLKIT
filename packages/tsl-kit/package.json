{
  "name": "@tslstudio/tsl-kit",
  "version": "0.1.0",
  "description": "TSL/WebGPU toolkit for Three.js r181+ with noise, lighting, materials, post-processing, compute, and fluid simulation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./noise": {
      "import": "./dist/noise/index.js",
      "types": "./dist/noise/index.d.ts"
    },
    "./lighting": {
      "import": "./dist/lighting/index.js",
      "types": "./dist/lighting/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./sdf": {
      "import": "./dist/sdf/index.js",
      "types": "./dist/sdf/index.d.ts"
    },
    "./postfx": {
      "import": "./dist/postfx/index.js",
      "types": "./dist/postfx/index.d.ts"
    },
    "./compute": {
      "import": "./dist/compute/index.js",
      "types": "./dist/compute/index.d.ts"
    },
    "./materials": {
      "import": "./dist/materials/index.js",
      "types": "./dist/materials/index.d.ts"
    },
    "./wgsl": {
      "import": "./dist/wgsl/index.js",
      "types": "./dist/wgsl/index.d.ts"
    },
    "./shadows": {
      "import": "./dist/shadows/index.js",
      "types": "./dist/shadows/index.d.ts"
    },
    "./math": {
      "import": "./dist/math/index.js",
      "types": "./dist/math/index.d.ts"
    },
    "./compute/fluids": {
      "import": "./dist/compute/fluids/index.js",
      "types": "./dist/compute/fluids/index.d.ts"
    },
    "./compute/forces": {
      "import": "./dist/compute/forces/index.js",
      "types": "./dist/compute/forces/index.d.ts"
    },
    "./postfx": {
      "import": "./dist/postfx/index.js",
      "types": "./dist/postfx/index.d.ts"
    },
    "./postfx/core": {
      "import": "./dist/postfx/core/index.js",
      "types": "./dist/postfx/core/index.d.ts"
    },
    "./postfx/passes": {
      "import": "./dist/postfx/passes/index.js",
      "types": "./dist/postfx/passes/index.d.ts"
    },
    "./dsl": {
      "import": "./dist/dsl/index.js",
      "types": "./dist/dsl/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo \"Tests will be added\" && exit 0"
  },
  "keywords": [
    "three.js",
    "webgpu",
    "tsl",
    "shaders",
    "noise",
    "materials",
    "post-processing"
  ],
  "author": "TSLStudio",
  "license": "MIT",
  "peerDependencies": {
    "three": "^0.181.0"
  },
  "devDependencies": {
    "@webgpu/types": "^0.1.51",
    "three": "^0.181.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
