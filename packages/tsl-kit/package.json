{
  "name": "@tslstudio/tsl-kit",
  "version": "0.0.1",
  "description": "Foundational TSL node utilities for WebGPU",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./noise": {
      "types": "./dist/noise/index.d.ts",
      "import": "./dist/noise/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest run"
  },
  "dependencies": {
    "three": "0.164.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "typescript": "5.4.5"
  }
}
