[
  {
    "id": "post.cinematic-triad",
    "name": "Cinematic Triad",
    "kind": "post",
    "description": "Bloom, lens dirt, and film curve tuned for high-contrast reels.",
    "tags": ["bloom", "lens", "tone-mapping"],
    "previewColor": "#f472b6",
    "parameters": [
      {
        "name": "bloomIntensity",
        "label": "Bloom",
        "type": "number",
        "defaultValue": 0.9,
        "min": 0,
        "max": 2,
        "step": 0.05
      },
      {
        "name": "filmGrain",
        "label": "Film Grain",
        "type": "number",
        "defaultValue": 0.35,
        "min": 0,
        "max": 1,
        "step": 0.01
      },
      {
        "name": "enableVignette",
        "label": "Vignette",
        "type": "boolean",
        "defaultValue": true
      }
    ],
    "postStack": {
      "passes": [
        { "type": "bloom.standard", "intensity": 1.1, "radius": 0.7, "threshold": 0.82 },
        { "type": "bloom.anamorphic", "intensity": 0.8, "anamorphicRatio": 1.5 },
        { "type": "motion.blur", "intensity": 0.6, "samples": 10 },
        { "type": "tonemap.aces", "exposure": 1.1 },
        { "type": "aa.fxaa", "spanMax": 6 }
      ]
    },
    "documentation": "https://docs.tsl.studio/presets/cinematic-triad"
  },
  {
    "id": "post.xr-pulse",
    "name": "XR Pulse",
    "kind": "post",
    "description": "Pulsating chromatic aberration with rolling shutter ghosting.",
    "tags": ["xr", "chromatic", "glitch"],
    "previewColor": "#38bdf8",
    "parameters": [
      {
        "name": "pulseRate",
        "label": "Pulse Rate",
        "type": "number",
        "defaultValue": 1.2,
        "min": 0.1,
        "max": 4,
        "step": 0.1
      },
      {
        "name": "ghosting",
        "label": "Ghosting",
        "type": "number",
        "defaultValue": 0.45,
        "min": 0,
        "max": 1,
        "step": 0.01
      },
      {
        "name": "enableAberration",
        "label": "Chromatic Aberration",
        "type": "boolean",
        "defaultValue": true
      }
    ],
    "postStack": {
      "passes": [
        { "type": "aa.taa", "blendFactor": 0.8, "jitterSpread": 0.3 },
        { "type": "bloom.luma", "intensity": 1.2, "threshold": 0.6 },
        { "type": "gi.ssgi", "intensity": 0.9, "temporalBlend": 0.7 },
        { "type": "gi.gtao", "radius": 0.5, "falloff": 0.85 },
        { "type": "tonemap.uncharted2", "exposure": 1.3 }
      ]
    },
    "documentation": "https://docs.tsl.studio/presets/xr-pulse"
  }
]
