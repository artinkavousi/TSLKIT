{
  "name": "@tslstudio/engine",
  "version": "0.0.1",
  "description": "Renderer orchestration utilities for TSLStudio",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer/index.d.ts",
      "import": "./dist/renderer/index.js"
    },
    "./capabilities": {
      "types": "./dist/capabilities/index.d.ts",
      "import": "./dist/capabilities/index.js"
    },
    "./post": {
      "types": "./dist/post/index.d.ts",
      "import": "./dist/post/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest run"
  },
  "dependencies": {
    "three": "0.181.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "typescript": "5.4.5"
  }
}
